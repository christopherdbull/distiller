!!!
%html
  %head
    %link{:href => "/favicon.png", :rel => "icon", :type => "image/png"}/
    %title Distiller
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .container
      = render 'shared/menu'
      -if notice
        %p.notice= notice
      -if alert
        %p.alert= alert
      = yield
